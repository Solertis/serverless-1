{

	"security": {
		"schemes": {
			"token": {
				"prefix": "Bearer",
				"auth": { "secrets": "default" }
			},
			"cookie": {
				"auth": { "secrets": "default" }
			},
			"signature": {
				"prefix": "BNB-HMAC-SHA256",
				"auth": { 
					"query": {
						"entity": "AppKeys", "where": { "accessKey": ":accessKey" }
					}	 
				}
			},
			"basic": {
				"auth": { 
					"query": {
						"entity": "Users", "where": { "email": ":id", "password": ":password" }
					}	 
				}
			}
		}
	}
	
}