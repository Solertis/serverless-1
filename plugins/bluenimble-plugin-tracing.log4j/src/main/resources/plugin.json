{
	"namespace": "tracing.log4j",
	"name": "Tracing Implementation - Log4J",
	
	"spi": {
		"class": "com.bluenimble.platform.plugins.tracing.log4j.Log4JTracerPlugin",
		"properties": {
			"version": "[version]",
			"vendor": {
				"name": "BlueNimble, Inc",
				"links": [{
					"Read More": "https://www.bluenimble.com"
				}]
			},
			"initOnInstall": "true",
			
			"weight": "1000"
		}
	},
	
	"systemProperties": {
		"log4j.shutdownHookEnabled": "false",
		"log4j2.contextSelector": "org.apache.logging.log4j.core.async.AsyncLoggerContextSelector"
	}
	
}	