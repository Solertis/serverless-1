{
	"name": "server.ext",
	"title": "Instance Extensions - ApiRequest Visitor",
	
	"spi": {
		"class": "com.bluenimble.platform.plugins.ext.ExtensionsPlugin",
		"properties": {
			"version": "1.0",
			"vendor": {
				"name": "BlueNimble, Inc",
				"links": [{
					"Read More": "https://www.bluenimble.com"
				}]
			},
			"spec": {
			
				"static": { 
					"/": "[ vars.plugins.ext.static.root | '/sys/mgm/instance/all' ]" 
				},

				"space": { 
					"value": "[ vars.plugins.ext.space.value | '' ]", 
					"placeholder": "[ vars.plugins.ext.space.placeholder | 'path' ]", 
					"index": "[ vars.plugins.ext.space.index | '0' ]", 
					"mapping": "[ vars.plugins.ext.space.mapping | '{}' ] >> json" 
				},
				"api": { 
					"value": "[ vars.plugins.ext.api.value | '' ]",
					"placeholder": "[ vars.plugins.ext.api.placeholder | 'path' ]", 
					"index": "[ vars.plugins.ext.api.index | '1' ]", 
					"mapping": "[ vars.plugins.ext.api.mapping | '{}' ] >> json"
				},
				"resource": { 
					"value": "[ vars.plugins.ext.resource.value | '' ]",
					"placeholder": "[ vars.plugins.ext.resource.placeholder | 'path' ]", 
					"index": "[ vars.plugins.ext.resource.index | '2' ]", 
					"mapping": "[ vars.plugins.ext.resource.mapping | '{}' ] >> json"
				}
				
			}
		}
	}
}	